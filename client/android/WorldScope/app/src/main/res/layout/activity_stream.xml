<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    tools:context="com.litmus.worldscope.StreamActivity">

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="layout.StreamVideoFragment"
        android:id="@+id/streamVideoFragment"
        android:layout_gravity="center_horizontal|bottom"
        tools:layout="@layout/fragment_stream_video" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.litmus.worldscope.StreamCreateFragment"
        android:id="@+id/streamCreateFragment"
        android:layout_gravity="center"
        tools:layout="@layout/fragment_stream_create" />

</FrameLayout>
