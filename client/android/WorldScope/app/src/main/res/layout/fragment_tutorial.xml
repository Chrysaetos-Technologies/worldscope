<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#64000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Double tap screen to toggle control button"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap control button to pause stream"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hold control button to stop stream"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not show again"
        android:id="@+id/noShowCheckBox"
        android:checked="false"
        android:layout_above="@+id/tutorialButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOT IT"
        android:id="@+id/tutorialButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_button"
        android:textColor="#ED4242"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:src="@drawable/white_arrow"
        android:layout_alignBottom="@+id/noShowCheckBox"
        android:layout_toEndOf="@+id/noShowCheckBox" />
</RelativeLayout>
